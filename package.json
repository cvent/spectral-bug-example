{
  "name": "spectral-bug-example",
  "version": "1.0.0",
  "description": "Simple example to show bug in spectral linting",
  "main": "index.js",
  "scripts": {
    "lint": "spectral lint ./**/*.json -v -r examplerules.spectral.yaml",
    "lint-bulk": "spectral lint models/bulk-response.json -v -r examplerules.spectral.yaml",
    "lint-item": "spectral lint models/bulk-response-item.json -v -r examplerules.spectral.yaml",
    "lint-error": "spectral lint errors/error.json -v -r examplerules.spectral.yaml"
  },
  "author": "pwilson@cvent.com",
  "license": "ISC",
  "dependencies": {
    "@stoplight/spectral-cli": "^6.11.0"
  }
}
